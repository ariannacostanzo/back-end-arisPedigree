generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Dog {
  id          Int       @id @default(autoincrement())
  name        String?
  slug        String
  image       String?
  titles      String?
  sire        String?
  dam         String?
  sex         Boolean   @default(true)
  size        Int?
  weight      Int?
  dateOfBirth DateTime?
  dateOfDeath DateTime?
  color       String?
  country     Country?  @relation(fields: [countryId], references: [id])
  countryId   Int?
  breeder     String?
  kennel      String?
  owner       String?
  notes       String?
  breed       Breed?    @relation(fields: [breedId], references: [id])
  breedId     Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Breed {
  id        Int      @id @default(autoincrement())
  name      String
  dogs      Dog[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Country {
  id        Int      @id @default(autoincrement())
  name      String
  code      String
  dogs      Dog[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
